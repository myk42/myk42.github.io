---
import { getCollection, type CollectionEntry } from "astro:content";
import { getNewestPosts } from "../../scripts/sort.js";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";

//TODO: Add pagination at some point
export async function getStaticPaths() {
  const posts = await getCollection("posts");
  const tags = [...new Set(posts.map((post) => post.data.tags).flat())];
  return tags.map((tag) => {
    const filteredPosts = posts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: getNewestPosts(filteredPosts) }
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title=`MYK TAGS - #${tag}`>
  <div class="collection-container">
    <div class="collection-grid">
      {posts.map((post: CollectionEntry<"posts">) => <Card post={post} badge={true} />)}
    </div>
  </div>
</BaseLayout>
